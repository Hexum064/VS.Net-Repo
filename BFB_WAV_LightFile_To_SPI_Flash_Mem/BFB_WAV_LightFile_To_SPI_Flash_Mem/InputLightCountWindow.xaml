<Window x:Class="BFB_WAV_LightFile_To_SPI_Flash_Mem.InputLightCountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BFB_WAV_LightFile_To_SPI_Flash_Mem"
        mc:Ignorable="d"
        Title="InputLightCountWindow" Height="130" Width="200" WindowStyle="SingleBorderWindow" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0">Enter Number of Lights</Label>
        <TextBox x:Name="lightCountTextBox" Grid.Row="1" Width="100" Height="20" TextAlignment="Right" Text="81"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="okButton" IsDefault="True" Margin="4" Click="OkButton_Click">OK</Button>
            <Button x:Name="cencelButton" IsCancel="True" Margin="4" Click="CencelButton_Click">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
